<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Want-to-Go List</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&display=swap">
  <link rel="stylesheet" href="/css/globals.css">
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Navbar Styling */
    .navbar {
      z-index: 10; /* This will ensure the navbar stays on top */
    }

    .category-card, .view-btn, .location-wish-btn {
      position: relative;
      z-index: 20; /* Ensure buttons and cards stay above the background blobs */
    }

    .navbar-title {
      font-family: 'Dancing Script', cursive;
      font-size: 1.75rem;
      color: #2C3E50;
    }

    .search-input {
      border: 2px solid #0891b2;
    }

    .search-btn {
      background-color: #0891b2;
      color: white;
      padding: 0 12px;
      font-size: 16px;
      border: none;
      border-radius: 0 9999px 9999px 0;
      visibility: visible;
      display: inline-flex;
      justify-content: center;
      align-items: center;
    }

    /* Card Styling */
    .category-card {
      background: white;
      border-radius: 12px;
      padding: 16px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .category-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .category-image {
      width: 100%;
      height: 200px;
      object-fit: cover;
      border-radius: 8px;
      margin-bottom: 12px;
    }

    .view-btn {
      background-color: #0891b2;
      color: white;
      padding: 8px 16px;
      border-radius: 8px;
      font-weight: bold;
      transition: background-color 0.3s ease;
    }

    .view-btn:hover {
      background-color: #0e7490;
    }

    /* Want-to-Go List Section */
    .want-to-go-list-btn {
      background-color: #0891b2;
      color: white;
      padding: 10px 24px;
      border-radius: 9999px;
      font-weight: bold;
      transition: background-color 0.3s ease;
      width: 64%;
    }

    .want-to-go-list-btn:hover {
      background-color: #0e7490;
    }

    /* Responsive Grid */
    @media (min-width: 768px) {
      .categories-grid {
        grid-template-columns: repeat(3, 1fr);
      }
    }
  </style>
</head>

<body class="min-h-screen bg-gray-100 flex flex-col">
  <!-- Navbar -->
  <%- include('components/Nav') %>

  <!-- Want-to-Go List Title -->
  <div class="container mx-auto mt-28 px-6 z-50">
    <h1 class="text-4xl font-bold text-center text-gray-700 mb-8">Want-to-Go List</h1>
  </div>

  <!-- List of Places (Dummy Data) -->
  <div class="container mx-auto px-6 grid grid-cols-1 gap-8 sm:grid-cols-4">
    <!-- Dummy Array of Places -->
    <% 
      const places = [
        { id: 1, name: "Tokyo", description: "The Capital of Japan", image: "/tokyo.jpg" },
        { id: 2, name: "New York", description: "The Big Apple", image: "/newyork.jpg" },
        { id: 3, name: "London", description: "The Capital of England", image: "/london.jpg" },
        { id: 4, name: "Sydney", description: "Famous for the Opera House", image: "/sydney.jpg" }
      ];
    %>
    
    <% if (places.length === 0) { %>
      <p class="text-center text-gray-600 text-xl">Your Want-to-Go list is empty. Add some places!</p>
    <% } else { %>
      <% places.forEach(place => { %>
        <div class="category-card text-center">
          <img src="<%= place.image %>" alt="<%= place.name %>" class="category-image">
          <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= place.name %></h2>
          <p class="text-gray-600 mb-4"><%= place.description %></p>
          <a href="/location/<%= place.id %>" class="view-btn">View</a>
        </div>
      <% }) %>
    <% } %>
  </div>

  <!-- Actions -->
  <div class="container mx-auto px-6 mt-12 text-center flex flex-col justify-between items-center gap-4 z-50">
    <a href="/dashboard" class="want-to-go-list-btn">
      Go to Dashboard
    </a>
  </div>

  <!-- Background blob effect -->
  <div class="portal__form--bg absolute inset-0 z-0">
    <div class="portal__form--bg-gradient-1 absolute inset-0 z-0"></div>
    <div class="portal__form--bg-gradient-2 absolute inset-0 z-0"></div>
  </div>
</body>

</html>