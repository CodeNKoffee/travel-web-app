<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Destinations</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&display=swap">
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Navbar Styling */
    .navbar-title {
      font-family: 'Dancing Script', cursive;
      font-size: 1.75rem;
      color: #2C3E50;
    }

    .search-bar {
      max-width: 350px;
      height: 42px;
      border-radius: 9999px;
      overflow: hidden;
    }

    .search-input {
      width: 100%;
      padding: 0 12px;
      height: 100%;
      border: none;
      outline: none;
      font-size: 1rem;
    }

    .search-btn {
      background-color: #0891b2;
      color: white;
      padding: 0 12px;
      border: none;
      border-radius: 0 9999px 9999px 0;
    }

    /* Card Styling */
    .category-card {
      background: white;
      border-radius: 12px;
      padding: 16px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .category-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .category-image {
      width: 100%;
      height: 300px;
      object-fit: cover;
      border-radius: 8px;
      margin-bottom: 12px;
    }

    .view-btn {
      background-color: #0891b2;
      color: white;
      padding: 8px 16px;
      border-radius: 8px;
      font-weight: bold;
      transition: background-color 0.3s ease;
    }

    .view-btn:hover {
      background-color: #0e7490;
    }

    /* Responsive Grid */
    @media (min-width: 768px) {
      .categories-grid {
        grid-template-columns: repeat(3, 1fr);
      }
    }
  </style>
</head>

<body class="min-h-screen bg-gray-100 flex flex-col">
  <!-- Navbar -->
  <nav class="bg-white shadow-md fixed top-0 left-0 w-full py-4 z-10">
    <div class="container mx-auto flex items-center justify-between px-6">
      <a href="/home" class="navbar-title">MyEgypt</a>
      <form method="POST" action="/search" class="search-bar flex items-center">
        <input type="search" name="Search" placeholder="Search" class="search-input text-gray-700">
        <button type="submit" class="search-btn">Search</button>
      </form>
    </div>
  </nav>

  <!-- Destinations Title -->
  <div class="container mx-auto mt-28 px-6">
    <h1 class="text-4xl font-bold text-center text-gray-700 mb-8">Destinations</h1>
  </div>

  <!-- Categories Section -->
  <div class="container mx-auto px-6 grid grid-cols-1 gap-8 sm:grid-cols-3">
    <!-- Hiking Category -->
    <div class="category-card text-center">
      <img src="/hiking.png" alt="Hiking" class="category-image">
      <h2 class="text-xl font-semibold text-gray-800 mb-2">Hiking</h2>
      <button onclick="location.href = '/hiking';" class="view-btn">View</button>
    </div>

    <!-- Cities Category -->
    <div class="category-card text-center">
      <img src="/cities.png" alt="Cities" class="category-image">
      <h2 class="text-xl font-semibold text-gray-800 mb-2">Cities</h2>
      <button onclick="location.href = '/cities';" class="view-btn">View</button>
    </div>

    <!-- Islands Category -->
    <div class="category-card text-center">
      <img src="/islands.png" alt="Islands" class="category-image">
      <h2 class="text-xl font-semibold text-gray-800 mb-2">Islands</h2>
      <button onclick="location.href = '/islands';" class="view-btn">View</button>
    </div>
  </div>

  <!-- Want-to-Go List -->
  <div class="container mx-auto px-6 mt-12 text-center">
    <button onclick="location.href = '/wanttogo';" class="view-btn w-64 mx-auto">
      Want-to-Go List
    </button>
  </div>
</body>

</html>